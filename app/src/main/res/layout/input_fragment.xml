<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lbl_your_name"
            android:text="Enter Task :"
            android:textSize="20sp"
            android:layout_width="150sp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/addTextInput"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:layout_below="@+id/lbl_your_name"
            android:layout_marginBottom="16sp"
            android:paddingTop="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:text="Select Context :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addTextInput" />

        <EditText
            android:layout_below="@+id/waitingFor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/waitingText" />

        <Button
            android:layout_below="@+id/waitingText"
            android:text="Add"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/addTaskbutton" />

        <TextView
            android:id="@+id/textView4"
            android:text="Select Status :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addTextInput"
            android:layout_alignStart="@+id/statusSpinner" />

        <Spinner
            android:layout_width="120sp"
            android:id="@+id/contextSpinner"
            android:layout_height="40sp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="120sp"
            android:id="@+id/statusSpinner"
            android:layout_height="40sp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Waiting For :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contextSpinner"
            android:id="@+id/waitingFor" />


    </RelativeLayout>

</LinearLayout>